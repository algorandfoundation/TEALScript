{
  "name": "@joe-p/tealscript",
  "version": "0.6.0",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "scripts": {
    "examples": "ts-node src/bin/tealscript.ts examples/arc12/arc12.ts",
    "simple-gen-artifacts": "ts-node src/bin/tealscript.ts examples/simple/simple.ts examples/simple/artifacts/",
    "simple-gen-client": "npx beaker-ts -- generate examples/simple/artifacts/Simple.json examples/simple/",
    "simple-gen": "yarn simple-gen-artifacts && yarn simple-gen-client && yarn fix",
    "simple-run": "npx tsx examples/simple/index.ts",
    "simple": "yarn simple-gen && yarn simple-run",
    "test": "yarn pre-test && nyc --reporter=html mocha --timeout 10000 -r ts-node/register --exclude 'tests/examples.test.ts' 'tests/**/*.test.ts'",
    "test-examples": "mocha --timeout 10000 -r ts-node/register 'tests/examples.test.ts'",
    "lint": "eslint examples/ src/ tests/ --ext .ts",
    "fix": "eslint --fix examples/ src/ tests/ --ext .ts",
    "docs": "typedoc",
    "prepack": "tsc",
    "compile-tests": "for f in tests/contracts/abi.ts; do ts-node src/bin/tealscript.ts $f; done",
    "generate-test-clients": "for f in tests/contracts/AbiTest.json; do npx beaker-ts generate $f tests/contracts/clients/; done",
    "pre-test": "yarn compile-tests && yarn generate-test-clients",
    "itxns": "tsx ./src/bin/tealscript.ts examples/itxns/itxns.ts examples/itxns/artifacts && beaker generate examples/itxns/artifacts/FactoryCaller.json examples/itxns/beaker-client && tsx examples/itxns/demo.ts",
    "tuple_in_box": "tsx ./src/bin/tealscript.ts ./examples/tuple_in_box/app.ts ./examples/tuple_in_box/tealscript_artifacts && beaker generate ./examples/tuple_in_box/tealscript_artifacts/ContactsApp.json ./examples/tuple_in_box/tealscript_artifacts && tsx ./examples/tuple_in_box/client.ts"
  },
  "dependencies": {
    "algosdk": "^2.0.0",
    "beaker-ts": "^0.0.70",
    "eslint": "^8.28.0",
    "node-fetch": "2",
    "typescript": "^4.9.3",
    "vlq": "^2.0.4"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.9",
    "@types/node-fetch": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "chai": "^4.3.7",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.1.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.3",
    "typedoc": "^0.23.23",
    "typedoc-plugin-merge-modules": "^4.0.1"
  },
  "bin": {
    "tealscript": "dist/bin/tealscript.js"
  }
}
